<div class="new_comment">  
  <%= form_for(@comment) do |f| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

        <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="short_form_items">
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>
    <div id="comment_description" class="field">
      <%= f.label :comment %>
      <%= f.text_area :comment %>
    </div>
    <%= f.hidden_field :app_id, :value => params[:id] %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>