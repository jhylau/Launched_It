<div class="new_app"> 
  <%= form_for(@app) do |f| %>
    <% if @app.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@app.errors.count, "error") %> prohibited this app from being saved:</h2>

        <ul>
        <% @app.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    
    <div class="field">
      <%= f.label :codebase_url %>
      <%= f.text_field :codebase_url %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    
    <div id="app_description" class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <br/>
    
    <div class="actions">
      <span class="submit_it"><%= f.submit %></span>
    </div>
  <% end %>
</div>
